@{
  Layout = "_Layout";
}
<div class="container text-center">
  <h1>NPC Editor</h1>
  <div>
    <form class="form-group" action="/npcs/details/{id}" method="post">
      <select class="form-control" name="id" id="id">
      <option value="0">Empty</option>
      @{
        if (@Model.Count > 0)
        {
          foreach (var NPC in @Model)
          {
            <option value="@NPC.GetId()">@NPC.GetName()</option>
          }
        }
      }
      </select>
      <button type="submit" class="btn btn-danger">View NPC</button>
    </form>
  </div>
  <div>
    <form class="form-group" action="/npcs" method="post">
      <input type="text" name="newNPCName" value="" placeholder="Enter NPC name">
      <button type="submit" class="btn btn-danger">Add NPC</button>
    </form>
  </div>
</div>
